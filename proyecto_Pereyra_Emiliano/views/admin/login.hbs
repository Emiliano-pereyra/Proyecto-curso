<div class="container" style="margin-top: 100px; margin-bottom 60px">
    <div class="row">
        <div class="col">
            <form action="/admin/login" method="post">
                <div class="form-group">
                    <label for="usuario">Usuario</label>
                    <input type="text" class="form-control" placeholder="usuario" aria-describedby="emailhelp" name="usuario">

                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="text" class="form-control" placeholder="password" aria-describedby="emailhelp" name="password">
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Enviar</button>
            </form>
            {{#if error}}
            <p> Usuario o contraseña erroneos </p>
            {{/if}}
        </div>
    </div>
</div>